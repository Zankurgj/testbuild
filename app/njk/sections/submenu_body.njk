<div class="row header-submenu-row">
  <div class="header-submenu-column header-submenu-column--border">
    <p class="header-submenu-title">Место применения</p>
    <ul class="header-submenu-list">
      <li>
        <label>
          <input type="radio" name="faceSubmenu" class="header-submenu-tab-input" checked="checked" onchange="onShowMenuTab(this, 'subMenuFaceSalon')">
          <span class="header-submenu-list-item">Салон</span>
        </label>
      </li>
      <li>
        <label>
          <input type="radio" name="faceSubmenu" class="header-submenu-tab-input" onchange="onShowMenuTab(this, 'subMenuFaceHome')">
          <span class="header-submenu-list-item">Дом</span>
        </label>
      </li>
      <li>
        <img src="./images/dest/img/DSC_6372.png" alt="Продукция" class="header-submenu-list-img-product">
      </li>
      <li>
        <a href="#" class="header-submenu-list-item">Все продукты для тела</a>
      </li>
    </ul>
  </div>
  <div class="header-submenu-tab-wrapper show" data-tab-name="bodySubmenu" id="subMenuBodySalon">
    <div class="header-submenu-column header-submenu-column--border">
      <p class="header-submenu-title">Тип ухода</p>
      <ul class="header-submenu-list">
        {% set subBodyType = [
          ['Очищение'],
          ['Интенсивный уход'],
          ['Массаж'],
          ['Обертывание'],
          ['Кремы для тела'],
          ['Домашний уход'],
          ['Пилинги и скрабы'],
          ['Аксессуары'],
          ['Наборы']
        ] %}
        {% for item in subBodyType %}
          <li>
            <a href="#" class="header-submenu-list-item">{{item}}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="header-submenu-column header-submenu-column--border">
      <p class="header-submenu-title">Потребности</p>
      <ul class="header-submenu-list">
        {% set subBodyType = [
          ['Расслабление'],
          ['Питание'],
          ['Укрепление'],
          ['Увлажнение'],
          ['Тонизирование'],
          ['Антицеллюлитный уход'],
          ['Коррекция жировых отложений'],
          ['Лифтинг'],
          ['Коррекция стрий'],
          ['Лимфодренаж. Снятие отечности'],
          ['Увлажнение и защита']
        ] %}
        {% for item in subBodyType %}
          <li>
            <a href="#" class="header-submenu-list-item">{{item}}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="header-submenu-tab-wrapper" data-tab-name="bodySubmenu" id="subMenuBodyHome">
    <div class="header-submenu-column header-submenu-column--border">
      <p class="header-submenu-title">Тип ухода</p>
      <ul class="header-submenu-list">
        {% set subBodyType = [
          ['Скрабы'],
          ['Гели'],
          ['Кремы'],
          ['SPA-обёртывание']
        ] %}
        {% for item in subBodyType %}
          <li>
            <a href="#" class="header-submenu-list-item">{{item}}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="header-submenu-column header-submenu-column--border">
      <p class="header-submenu-title">Потребности</p>
      <ul class="header-submenu-list">
        {% set subBodyType = [
          ['Увлажнение'],
          ['Восстановление и питание'],
          ['Похудение'],
          ['Лифтинг'],
          ['Антицеллюлитный уход'],
          ['Тонус'],
          ['Детокс']
        ] %}
        {% for item in subBodyType %}
          <li>
            <a href="#" class="header-submenu-list-item">{{item}}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <img src="./images/dest/img/banner_product.png" alt="Продукция" class="header-submenu-banner-face">
</div>
<div class="header-submenu-btn-wrapper">
  <a href="#" class="btn btn-main btn--header-submenu">в каталог</a>
</div>